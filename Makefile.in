#
# makefile for savelogs
#
LEX	= @LEX@ -li
CC	= @CC@
CFLAGS	= @CFLAGS@
MANDIR  = $(ROOT)@mandir@
CONFDIR = $(ROOT)@confdir@
LIBDIR  = $(ROOT)@libdir@
BINDIR  = $(ROOT)@exedir@

OBJECTS	= savelogs.o lex.yy.o y.tab.o

target: savelogs

savelogs: $(OBJECTS) y.tab.h config.h
	$(CC) $(CFLAGS) -o savelogs $(OBJECTS)

lex.yy.o: scan.l y.tab.h config.h
	$(LEX) scan.l
	$(CC) $(CFLAGS) -c lex.yy.c

y.tab.c y.tab.h: gram.y
	$(YACC) -d gram.y

savelogs.o: savelogs.c y.tab.h config.h

clean:
	rm -f savelogs *.o lex.yy.c DEMO?
	rm -rf OLD

distclean spotless: clean
	rm -f config.* Makefile savelogs.8


test demo: savelogs
	-mkdir OLD
	for file in DEMO1 DEMO2 DEMO3 DEMO4 DEMO5; do \
	    dd if=/dev/zero of=$$file count=201 bs=1024 >/dev/null; \
	done
	@SED@ -e "s~@HERE@~`pwd`~g" < demo.conf.sh | ./savelogs -dddC -
	@echo -n "test DEMO1..."; test ! -r DEMO1 && echo "ok" || echo "failed"
	@echo -n "test DEMO2..."; test -r DEMO2 && echo "ok" || echo "failed"
	@echo -n "test DEMO3..."; test -r DEMO3 && echo "ok" || echo "failed"
	@echo -n "test DEMO4..."; test ! -r DEMO4 && echo "ok" || echo "failed"

install: install.man install.bin 

install.man:
	@INSTALL@ -d $(MANDIR)/man8
	@INSTALL_DATA@ savelogs.8 $(MANDIR)/man8

install.bin:
	@INSTALL@ -d $(BINDIR)
	@INSTALL_PROGRAM@ savelogs $(BINDIR)

install.conf:
	if [ ! -r $(CONFDIR)/savelogs.conf ]; then \
	    @INSTALL@ -d $(CONFDIR); \
	    @INSTALL_DATA@ log.conf $(CONFDIR)/savelogs.conf; \
	fi
